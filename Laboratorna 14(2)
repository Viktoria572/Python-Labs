import matplotlib.pyplot as plt
import math
from math import *
import numpy as np

def f2(x,y):
  return x + math.sin(y/3))
h = 0.1
x = 1.8
y = 2.8
arrX = []
arrY = []

for i in range(0,10):
  x += h
  y += h/2 * (f2(x,y) + f2(x + h, f2(x,y)))
  arrX.append([x])
  arrY.append([y])
  print('X array: ', (np.round(arrX, 4)), 'Y array: ', (np.round(arrY, 4)))
  print('h = ', h)
  plt.plot(arrX, arrY, 'g--')
  plt.show()


